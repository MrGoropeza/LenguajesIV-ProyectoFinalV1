<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinalV1.Views.InAppPages.StartPage">
    <ContentPage.Resources>
        <Style TargetType="Grid">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor"
                                        Value="Gray" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </ContentPage.Resources>
    <ContentPage.Content>
        <RefreshView IsRefreshing="{Binding IsRefreshingTxt}"
                     Command="{Binding RefreshCommand}">
        <ScrollView BackgroundColor="SlateGray">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Frame 
                    Grid.Row="0"
                    CornerRadius="20"
                    Margin="10, 10, 10, 10"
                    Padding="0"
                    BackgroundColor="CadetBlue">
                    <SearchBar
                        CancelButtonColor="White"
                        PlaceholderColor="White"
                        TextColor="White"
                        Placeholder="Buscar películas"/>
                </Frame>
                
                
                <Frame Grid.Row="1"
                       CornerRadius="20"
                       Margin="10"
                       Padding="3"
                       BackgroundColor="Azure">
                    <StackLayout 
                         Margin="10"
                         HeightRequest="400">
                        <Label Text="Peliculas en cine"
                           TextColor="Black"
                           FontSize="Title"
                           />
                        
                        <CollectionView ItemsSource="{Binding EnCinesItems}"
                                        SelectionMode="Single"
                                        SelectionChangedCommand="{Binding EnCinesSelectCommand}"
                                        SelectedItem="{Binding EnCinesSelection}">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Horizontal"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <Frame
                                                Grid.Row="0"
                                                Padding="0"
                                                BackgroundColor="Transparent"
                                                CornerRadius="20">
                                                <StackLayout>
                                                    <Image
                                                        Source="{Binding imageUrl}"
                                                        Aspect="AspectFit"
                                                        HeightRequest="280"/>
                                                    
                                                </StackLayout>
                                            </Frame>
                                            <Label
                                                Grid.Row="1"
                                                Text="{Binding title}"
                                                TextColor="Black"
                                                FontSize="Medium"
                                                HorizontalOptions="FillAndExpand"
                                                WidthRequest="180"/>
                                        </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                        
                    </StackLayout>
                    
                </Frame>

                    <Frame Grid.Row="2"
                       CornerRadius="20"
                       Margin="10"
                       Padding="3"
                       BackgroundColor="Azure">
                        <StackLayout 
                         Margin="10"
                         HeightRequest="400">
                            <Label Text="Peliculas populares"
                           TextColor="Black"
                           FontSize="Title"
                           />

                            <CollectionView ItemsSource="{Binding PelisPopularesItems}"
                                RemainingItemsThresholdReachedCommand="{Binding ActualizarPelisPopularesCommand}"
                                RemainingItemsThresholdReachedCommandParameter="pelisPopulares"
                                RemainingItemsThreshold="{Binding ItemTreshold}"
                                SelectionMode="Single"
                                SelectionChangedCommand="{Binding PelisPopularesSelectCommand}"
                                SelectedItem="{Binding PelisPopularesSelection}">
                                <CollectionView.ItemsLayout>
                                    <LinearItemsLayout Orientation="Horizontal"/>
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="10">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <Frame
                                                Grid.Row="0"
                                                Padding="0"
                                                BackgroundColor="Transparent"
                                                CornerRadius="20">
                                                <StackLayout>
                                                    <Image
                                                        Source="{Binding imageUrl}"
                                                        Aspect="AspectFit"
                                                        HeightRequest="280"
                                                        />

                                                </StackLayout>
                                            </Frame>
                                            <Label
                                                Grid.Row="1"
                                                Text="{Binding title}"
                                                TextColor="Black"
                                                FontSize="Medium"
                                                HorizontalOptions="FillAndExpand"
                                                WidthRequest="180"/>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                        </StackLayout>
                    </Frame>

                    <Frame Grid.Row="3"
                       CornerRadius="20"
                       Margin="10"
                       Padding="3"
                       BackgroundColor="Azure">
                        <StackLayout 
                         Margin="10"
                         HeightRequest="400">
                            <Label Text="Peliculas más valoradas"
                           TextColor="Black"
                           FontSize="Title"
                           />

                            <CollectionView
                                ItemsSource="{Binding TopRatedItems}"
                                RemainingItemsThresholdReachedCommand="{Binding ActualizarTopRatedCommand}"
                                RemainingItemsThreshold="{Binding ItemTreshold}"
                                SelectionMode="Single"
                                SelectionChangedCommand="{Binding TopRatedSelectCommand}"
                                SelectedItem="{Binding TopRatedSelection}">>
                                <CollectionView.ItemsLayout>
                                    <LinearItemsLayout Orientation="Horizontal"/>
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="10">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <Frame
                                                Grid.Row="0"
                                                Padding="0"
                                                BackgroundColor="Transparent"
                                                CornerRadius="20">
                                                <StackLayout>
                                                    <Image
                                                        Source="{Binding imageUrl}"
                                                        Aspect="AspectFit"
                                                        HeightRequest="280"
                                                        />

                                                </StackLayout>
                                            </Frame>
                                            <Label
                                                Grid.Row="1"
                                                Text="{Binding title}"
                                                TextColor="Black"
                                                FontSize="Medium"
                                                HorizontalOptions="FillAndExpand"
                                                WidthRequest="180"/>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                        </StackLayout>
                    </Frame>

            </Grid>
        </ScrollView>
        </RefreshView>
    </ContentPage.Content>
</ContentPage>